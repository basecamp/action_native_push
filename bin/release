#!/usr/bin/env bash

VERSION=$1

printf "module ActionPush\n  VERSION = \"$VERSION\"\nend\n" > ./lib/actionpush/version.rb
bundle
git add Gemfile.lock lib/actionpush/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag v$VERSION
git push --tags
gem build actionpush
gem push "actionpush-$VERSION.gem" --host https://rubygems.org
rm "actionpush-$VERSION.gem"
